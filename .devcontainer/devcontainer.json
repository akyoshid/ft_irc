{
	"name": "ft_irc C++ Development",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": true,
			"configureZshAsDefaultShell": true,
			"installOhMyZsh": true
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack",
				"ms-python.python",
				"ms-python.vscode-pylance"
			],
			"settings": {
				"C_Cpp.default.cppStandard": "c++98",
				"C_Cpp.default.compilerPath": "/usr/bin/c++",
				"C_Cpp.default.includePath": [
					"${workspaceFolder}/include"
				],
				"python.defaultInterpreterPath": "${workspaceFolder}/tests/e2e/.venv/bin/python",
				"python.testing.pytestEnabled": true,
				"python.testing.pytestArgs": [
					"tests/e2e"
				]
			}
		}
	},
	"postCreateCommand": "make && make e2e-setup",
	"remoteUser": "vscode"
}
